<%-include('cabecalho.ejs')%>    
    <form method="post">
        Pesquisar: <input type="text" name="txtPesquisa" placeholder="Pesquisar">
        <input type="submit" value="Pesquisar">

    </form>
    <br>
    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Senha</th>
            <th>Foto</th>
            <th>Deletar</th>
            <th>Editar</th>
        </tr>
        <%for(usuario of Usuarios){%>
        <tr>
            <td><%=usuario._id%></td>
            <td><%=usuario.nome%></td>
            <td><%=usuario.email%></td>
            <td><%=usuario.senha%></td>
            <td>
                <video width="320" height="240" controls>
                <source src="/fotos/<%=usuario.foto%>"  type="video/mp4">
                </video>
            </td>
                            
            <td>
                <a href="/del/<%-usuario._id%>">Deletar</a>
            </td>

            <td>
                <a href="/edit/<%-usuario._id%>">Editar</a>
            </td>
            
        </tr>
        <% } %>
    </table>
<%-include('rodape.ejs')%>